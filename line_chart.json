{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Median household income trend for all Malaysian states (1980–2022).",
  "title": {
    "text": "Malaysia: Median Household Income by State (1980–2022)",
    "subtitle": "Data shown for available survey years (not annual)",
    "fontSize": 18,
    "subtitleFontSize": 12,
    "anchor": "start"
  },
  "data": { "url": "https://raw.githubusercontent.com/CHAISHOUZHENG/FIT3179-Ass2/refs/heads/main/hh_income_state%20(2).csv" },
  "transform": [
    { "filter": "year(datum.date) >= 1980" }
  ],
  "width": 700,
  "height": 400,

  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "timeUnit": "year",
      "title": "Year"
    },
    "y": {
      "field": "income_median",
      "type": "quantitative",
      "title": "Median Household Income (RM)"
    },
    "color": {
      "field": "state",
      "type": "nominal",
      "title": "State",
      "legend": {"columns": 2, "symbolLimit": 16}
    }
  },

  "layer": [
    {
      "mark": {
        "type": "line",
        "interpolate": "monotone",
        "strokeWidth": 2
      }
    },
    {
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "on": "pointerover",
            "clear": "pointerout"
          }
        }
      ],
      "mark": {
        "type": "circle",
        "filled": true,
        "tooltip": true
      },
      "encoding": {
        "opacity": {
          "condition": {"param": "hover", "value": 1},
          "value": 0
        },
        "size": {
          "condition": {"param": "hover", "value": 60},
          "value": 100
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "date", "type": "temporal", "timeUnit": "year", "title": "Year"},
          {"field": "income_median", "type": "quantitative", "title": "Median Income (RM)"}
        ]
      }
    }
  ]
}
