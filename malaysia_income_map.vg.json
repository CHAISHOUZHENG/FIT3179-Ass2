{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "autosize": {"type": "fit", "contains": "padding"},
  "width": "container",
  "height": 500,

  "projection": {
    "type": "mercator",
    "center": [110, 4],
    "scale": 2500,
    "translate": [{"signal": "width/2"}, {"signal": "height/2"}]
  },

  "layer": [
    {
      "data": {
        "url": "ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#cccccc",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CHAISHOUZHENG/FIT3179-Ass2/refs/heads/main/gadm41_MYS_1.json",
        "format": {"type": "topojson", "feature": "gadm41_MYS_1"}
      },
      "transform": [
        {
          "lookup": "properties.NAME_1",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/CHAISHOUZHENG/FIT3179-Ass2/refs/heads/main/hh_income_state%20(2).csv"
            },
            "key": "state",
            "fields": ["date", "income_median"]
          }
        },
        {"filter": "datum.date == '1/1/2022'"},
        {"calculate": "'RM ' + format(datum.income_median, ',')", "as": "income_label"},
        {
          "calculate": "datum.income_median <= 5000 ? 'Low (< RM5,000)' : datum.income_median <= 6500 ? 'Lower-middle (RM5,001–RM6,500)' : datum.income_median <= 8000 ? 'Upper-middle (RM6,501–RM8,000)' : 'High (> RM8,000)'",
          "as": "income_group"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "income_group",
          "type": "nominal",
          "scale": {
            "domain": [
              "Low (< RM5,000)",
              "Lower-middle (RM5,001–RM6,500)",
              "Upper-middle (RM6,501–RM8,000)",
              "High (> RM8,000)"
            ],
            "range": ["#deebf7", "#9ecae1", "#4292c6", "#084594"]
          },
          "legend": {
            "title": "Income Groups",
            "titleFontSize": 16,
            "labelFontSize": 10,
            "titlePadding": 10,
            "labelOffset": 8
          }
        },
        "tooltip": [
          {"field": "properties.NAME_1", "type": "nominal", "title": "State"},
          {"field": "income_label", "type": "nominal", "title": "Median Income"},
          {"field": "income_group", "type": "nominal", "title": "Group"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CHAISHOUZHENG/FIT3179-Ass2/refs/heads/main/gadm41_MYS_1.json",
        "format": {"type": "topojson", "feature": "gadm41_MYS_1"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5,
        "fill": null
      }
    }
  ]
}
